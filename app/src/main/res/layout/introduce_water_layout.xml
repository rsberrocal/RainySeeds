<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/falseBackButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckg_water_unfocused">

    </ImageView>

    <LinearLayout
        android:id="@+id/introduceWater"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rounded_button"
        android:orientation="vertical"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/selectText"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:hint="Introduce water"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/selectButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/water_btn_bckg"
                android:gravity="center"
                android:text="+"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="40sp">

            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@drawable/bckg_painted_water_1"
            android:orientation="vertical"
            android:weightSum="4">

            <FrameLayout
                android:id="@+id/btnGota"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:gravity="start"
                    android:text="@string/addWater1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_drink_1">

                </ImageView>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/divider_horizontal_bright" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnVaso"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:gravity="start"
                    android:text="@string/addWater2"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_glass">

                </ImageView>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/divider_horizontal_bright" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnBotella"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:gravity="start"
                    android:text="@string/addWater3"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_drink_3">

                </ImageView>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/divider_horizontal_bright" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnRegadera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:gravity="start"
                    android:text="@string/addWater4"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_drink_4">

                </ImageView>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
