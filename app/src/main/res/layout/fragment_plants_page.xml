<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="360dp"
            android:layout_height="120dp"
            >

            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR1C1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>
            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR1C2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>
            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR1C3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>

        </TableRow>

        <TableRow
            android:layout_width="360dp"
            android:layout_height="120dp"

            >
            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR2C1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>
            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR2C2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>
            <fragment class="com.rainyteam.controller.FragmentPlantGreenhouse"
                android:id="@+id/plantR2C3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
            </fragment>

        </TableRow>



    </TableLayout>

</FrameLayout>