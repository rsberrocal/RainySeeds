<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_invernadero"
    android:orientation="vertical">

    <fragment class="com.rainyteam.rainyseeds.FragmentPageGreenhouse"
        android:id="@+id/fragmentPageGreenhouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

    </fragment>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/buttonStore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="150dp"
            android:layout_gravity="center|end"
            android:src="@drawable/icon_shopping_cart">

        </ImageView>

        <LinearLayout
            android:id="@+id/layoutSeeds"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_button"
            >

            <ImageView
                android:id="@+id/imageViewSeed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/icon_seed" />

            <TextView
                android:id="@+id/textGoldenSeeds"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:text="12"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

    </FrameLayout>

    <fragment class="com.rainyteam.rainyseeds.SelectionViewMenu"
        android:id="@+id/fragmentViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

    </fragment>


</FrameLayout>