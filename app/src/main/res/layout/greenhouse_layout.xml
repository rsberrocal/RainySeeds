<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_invernadero"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonPreviousPage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_left_arrow">

        </ImageView>

        <!-- activity_screen_slide.xml -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="300dp"
            android:layout_height="match_parent" >

            <!--<fragment
                android:id="@+id/fragmentPageGreenhouse"
                class="com.rainyteam.controller.FragmentPageGreenhouse"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </fragment> -->

        </androidx.viewpager2.widget.ViewPager2>


        <ImageView
            android:id="@+id/buttonNextPage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_right_arrow">

        </ImageView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonStore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginHorizontal="150dp"
            android:src="@drawable/icon_shopping_cart">

        </ImageView>

        <LinearLayout
            android:id="@+id/layoutSeeds"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_button">

            <ImageView
                android:id="@+id/imageViewSeed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/icon_seed" />

            <TextView
                android:id="@+id/textGoldenSeeds"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:text="12"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

    </FrameLayout>

    <fragment
        android:id="@+id/fragmentViewMenu"
        class="com.rainyteam.controller.SelectionViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

    </fragment>

</FrameLayout>