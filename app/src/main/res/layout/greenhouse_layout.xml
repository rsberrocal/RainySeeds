<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_invernadero"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_shopping_cart">

    </ImageView>

    <ImageView
        android:id="@+id/flor"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/flor"
        android:contentDescription="TODO">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/buttonDictionary"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:onClick="goToDictionary"
            android:src="@drawable/icon_book"
            android:contentDescription="TODO">

        </ImageView>
        <ImageView
            android:id="@+id/buttonGlass"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:onClick="goToWater"
            android:src="@drawable/icon_glass"
            android:contentDescription="TODO">

        </ImageView>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutSeeds"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button">

        <ImageView
            android:id="@+id/imageViewSeed"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_seed"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textGoldenSeeds"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:text="12"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

</FrameLayout>